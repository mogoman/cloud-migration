{% extends "layout.twig" %}

{% block content %}
    <div class="text-white text-center get_all">
        <div class="container">
            <h1>All the keywords</h1>
            {% for node in nodes %}
            <div>
                <span class="node_name">{{ node.node }}</span> 
                <a href="/node/{{ node.id }}/create_link" class="btn btn-outline-secondary btn-sm">Link it!</a>
            </div>
            {% endfor %}
            <div class="col-xs-12">
                <a href="/keywords" class="btn btn-outline-secondary btn-lg">Add New</a>
            </div>
        </div>
    </div>
{% endblock %}